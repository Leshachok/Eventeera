<resources>
    <!-- Base application theme. -->
    <style name="Theme.Eventeera" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action01</item>
        <item name="colorOnPrimary">@color/bg01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/action01</item>
        <item name="colorOnSecondary">@color/bg01</item>
        <!-- Status bar color. -->
        <item name="android:colorBackground">@color/bg02</item>
        <item name="android:statusBarColor">@color/bg01</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/bg01</item>
        <item name="colorOnSurface">@color/bg02</item>

        <item name="android:textColorPrimary">@color/grey01</item>
        <item name="android:textColorSecondary">@color/grey02</item>

        <item name="materialTimePickerTheme">@style/Theme.MaterialTimePicker</item>
        <item name="materialCalendarTheme">@style/Theme.MaterialDatePicker</item>

        <item name="bottomSheetDialogTheme">@style/Theme.DialogStyle</item>
    </style>


    <style name="Theme.MaterialDatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action01</item>
        <item name="colorOnPrimary">@color/bg01</item>
        <item name="colorSecondary">@color/action01</item>
        <item name="colorOnSecondary">@color/bg01</item>
        <item name="colorSurface">@color/bg01</item>
        <item name="colorOnSurface">@color/grey02</item>
    </style>


    <style name="Theme.MaterialTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action01</item>
        <item name="colorOnPrimary">@color/bg01</item>
        <item name="colorSecondary">@color/action01</item>
        <item name="colorOnSecondary">@color/bg01</item>
        <item name="colorSurface">@color/bg01</item>
        <item name="colorOnSurface">@color/grey02</item>
    </style>


    <style name="Theme.DialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="ManropeRegular">
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ManropeMedium">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ManropeSemibold">
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ManropeBold">
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>